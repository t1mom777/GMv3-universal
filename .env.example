# Copy to `.env` and fill. Do NOT commit.

# OpenAI (used for LLM + STT + TTS in voice mode)
OPENAI_API_KEY=
# Optional (OpenAI-compatible providers / proxies)
# OPENAI_BASE_URL=https://api.openai.com/v1

# GM models
GM_LLM_PROVIDER=openai
GM_LLM_MODEL=gpt-4o-mini
GM_STT_PROVIDER=openai
GM_TTS_PROVIDER=openai
GM_STT_MODEL=gpt-4o-transcribe
GM_TTS_MODEL=gpt-4o-mini-tts
GM_TTS_VOICE=alloy
GM_EMBEDDING_MODEL=text-embedding-3-small

# Optional Deepgram STT (when GM_STT_PROVIDER=deepgram)
DEEPGRAM_API_KEY=
# Optional ElevenLabs TTS (when GM_TTS_PROVIDER=elevenlabs)
ELEVENLABS_API_KEY=

# Voice server (Pipecat websocket transport + simple browser client)
GM_WS_HOST=0.0.0.0
GM_WS_PORT=8765
GM_HTTP_HOST=0.0.0.0
GM_HTTP_PORT=8000
GM_WS_SESSION_TIMEOUT_SECS=900

# Campaign/session defaults
GM_CAMPAIGN_ID=demo
GM_SESSION_ID=ws
GM_PLAYER_ID=player1
GM_LOCALE=en-US
GM_RESPONSE_LANGUAGE_MODE=player

# Knowledge (optional)
QDRANT_URL=http://localhost:6333
GM_QDRANT_COLLECTION=gm_knowledge
GM_KB_SPLIT_COLLECTIONS=true
GM_QDRANT_GAME_COLLECTION=gm_knowledge_game
GM_QDRANT_GUIDANCE_COLLECTION=gm_knowledge_guidance
GM_KB_BACKEND=local
GM_QDRANT_LOCAL_PATH=data/qdrant_local
